{{!< default}}
{{#post}}
{{! Article: }}<article role="article" itemscope itemtype="http://schema.org/BlogPosting">

{{! Post wrap: }}<div class="postwrap_nix">
{{! Post top diag panel:/ }}<div class="posttop_nix"></div>
{{! Post mid: }}<div class="postmid_nix">
{{! Post inner: }}<div class="postinner_nix">

{{! Article header:/ }}<header>
{{! Article time | Post info/: }}<div class="postinfo_nix"><time datetime="{{date format="YYYY-MM-DD"}}" itemprop="datePublished">{{date format='dddd DD MMM YYYY'}}</time></div>
{{! Article headline:/ }}<h1 class="posttitle_nix" itemprop="headline">{{{title}}}</h1>
</header>{{! /Article header }}

{{! Article body:/ }}<div class="postbody_nix nixclear" itemprop="articleBody">{{{content}}}</div>

<hr />

{{! Article tags | sharing: }}<aside>
{{! Tags: }}{{#if tags}}
<p class="tags_nix"><i class="nix_icon-tag"></i> {{tags separator=" | "}}</p>
{{/if}}{{! /Tags }}

{{! Share icons: }}<h4 class="share_nix">Share this post: &nbsp;</h4>
<a class="share_nix nix_icon-twitter" target="_blank" href="http://twitter.com/share?text={{title}}&url={{url absolute="true"}}"><span class="nixhidethis">Twitter</span></a>
<a class="share_nix nix_icon-facebook" target="_blank" href="http://www.facebook.com/sharer.php?u={{url absolute="true"}}"><span class="nixhidethis">Facebook</span></a>
<a class="share_nix nix_icon-gplus" target="_blank" href="https://plus.google.com/share?url={{url absolute="true"}}"><span class="nixhidethis">Google+</span></a>{{! /Share icons }}
</aside>{{! /Article tags | sharing }}

</div>{{! /Article inner }}
</div>{{! /Post mid }}
{{! Post bottom diag panel:/ }}<div class="postbottom_nix"></div>
</div>{{! /Post wrap }}


<div class="postwrap_nix comments_nix"><div class="posttop_nix"></div><div class="postmid_nix">
<section class="postinner_nix" itemscope itemtype="http://schema.org/UserComments">
<div class="postbody_nix nixclear">
    <div id="disqus_thread"></div>
    <script type="text/javascript">
        /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
        var disqus_shortname = 'mcdirty'; // required: replace example with your forum shortname

        /* * * DON'T EDIT BELOW THIS LINE * * */
        (function() {
            var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
            dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
            (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
        })();
    </script>
    <noscript>Please enable JavaScript to view the <a href="http://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
    <a href="http://disqus.com" class="dsq-brlink">comments powered by <span class="logo-disqus">Disqus</span></a>
</div>
</section>
</div><div class="postbottom_nix"></div></div>


{{#if author}}
{{! Sub wrap: }}<div class="subwrap_nix">
{{! Sub top:/ }}<div class="subtop_nix"></div>
{{! Article footer: }}<footer class="post_footer_nix">
{{! Author info: }}<address itemscope itemtype="https://schema.org/Person">
{{#if author.image}}<div class="authorimage_nix"><img src="{{author.image}}" itemprop="image" /></div>{{/if}}
<h4 class="nix_author">{{#unless author.image}}<i class="nix_icon-user"></i>{{/unless}}<span itemprop="author">{{author.name}}</span></h4>
{{#if author.website}}<p><a href="{{author.website}}" itemprop="url" target="_blank" rel="author">{{author.website}}</a></p>{{/if}}
{{#if author.location}}<p itemscope itemtype="https://schema.org/PostalAddress"><span itemprop="addressLocality">{{author.location}}</span></p>{{/if}}
</address>
<div class="author_nix">
<p>{{author.bio}}</p>
</div>{{! /Author info }}
</footer>{{! /Article footer }}
</div>{{! /Sub wrap }}
{{/if}}

</article>{{! /Article }}
{{/post}}
